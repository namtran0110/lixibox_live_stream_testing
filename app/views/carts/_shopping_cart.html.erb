<div class="container">
  <% if @order_items.size == 0 %>
      <p class="text-center">
        There are no items in your shopping cart. Please <%= link_to "go back", root_path %> and add some items to your
        cart.
      </p>
  <% else %>
      <h2>Total: <%= number_to_currency current_order.subtotal %></h2>
      <table class="table">
        <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Number of Product</th>
          <th>Action</th>
        </tr>
        </thead>
      <% @order_items.each do |order_item| %>

            <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
      <% end %>
      </table>
      <p><%= link_to "Checkout", payment_path, method: :post, class: 'btn btn-secondary' %></p>
      <p><%= link_to "Continue shopping", root_path, class: "btn btn-secondary" %></p>

  <% end %>
</div>
