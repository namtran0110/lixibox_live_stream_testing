<div class="container row">
  <div class="col-md-6">
    <%= image_tag @product.image %>
  </div>
  <div class="col-md-6">
    <%= form_for @order_items do |f| %>
    <h2><%= @product.name %></h2>
    <p><%= @product.description %></p>
    <p><%= f.number_field :unit_price, value: @product.price %></p>
    <p><%= f.number_field :quantity, value: 1, class: "form-control, min: 1"%></p>
    <%= f.hidden_field :product_id, value: @product.id  %>
    <%= f.submit "Add to Cart", class: "btn btn-primary"%>
  <% end%>
  </div>
</div>
